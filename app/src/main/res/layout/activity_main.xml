<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="157dp"
            android:layout_height="175dp"
            android:text="0"
            android:textSize="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView"
            app:layout_constraintVertical_bias="0.357" app:layout_constraintHorizontal_bias="0.433"
            tools:visibility="visible"/>
    <Button
            android:text="Ajouter"
            android:onClick="ajout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            app:layout_constraintTop_toTopOf="@+id/textView"
            android:layout_marginTop="248dp" app:layout_constraintEnd_toStartOf="@+id/button2"
            android:layout_marginEnd="40dp" android:layout_marginRight="40dp"/>
    <Button
            android:text="Diminuer"

            android:onClick="diminuer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button2"
            app:layout_constraintTop_toTopOf="@+id/textView"
            android:layout_marginTop="248dp" app:layout_constraintEnd_toEndOf="@+id/textView"/>

</androidx.constraintlayout.widget.ConstraintLayout>